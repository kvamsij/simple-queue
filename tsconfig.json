{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,        // Generate d.ts files
    "sourceMap": true           // Generate source maps for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
